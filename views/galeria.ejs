<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta charset="utf-8">
  <title>SPiBox - Capturas Registradas</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <!--<link href="/theme.css" rel="stylesheet" type="text/css">-->
  <script src="js/jquery-3.1.0.min.js"></script>
  <script type="text/javascript">
      
      function volver() {
            window.history.back();
      }

      // ------------------------------------------------------------------------------------   
      // ------------------------------- DOCUMENT READY -------------------------------------
      // ------------------------------------------------------------------------------------

      $(document).ready(function() {
          //alert("Esto es una prueba de que ha cargado bien JQuery!");

          $("#borra_capturas").click(function() {

		var r = confirm("¿Estas seguro?");
		if (r == true) {
		    // Actualizamos el estado del botón:
                    $("#borra_capturas").prop("disabled",true);

                    // Hacemos una llamada a "Sistema" para ENCENDER el sistema:
                    $.get("borragaleria", function(data){ 
                        //alert(data);
                        $('#capturas').delay(500).slideUp(100, function(){ location.reload();});

                    });// Fin del $GET
		}
          });
      });
  </script>
</head>
<body>
  <div id="capturas">
      <%- galleryHtml %>
  </div>

  <br>

  <div>
	<button id="borra_capturas" class="borra">Borrar Capturas</button>
	<button class="back" onclick="volver()">Volver</button>
  </div>
</body>
</html>
